OUTPUT = client
CFLAGS = -g -Wall -Wvla --std=c11 `sdl2-config --cflags`
LFLAGS = `sdl2-config --libs` -lSDL2_image -lSDL2_ttf

%.o: %.c %.h
	gcc $(CFLAGS) -c -o $@ csapp.c $<

%.o: %.c
	gcc $(CFLAGS) -c -o $@ csapp.c $<

all: $(OUTPUT)

client: client.o
	gcc $(CFLAGS) -o $@ csapp.c $^ $(LFLAGS)

clean:
	rm -f $(OUTPUT) *.o
